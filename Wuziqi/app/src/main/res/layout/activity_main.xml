<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.administrator.wuziqi.MainActivity">

    <com.example.administrator.wuziqi.Wuziqipanel
        android:id="@+id/wuziqi"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <Button
        android:id="@+id/btn_voice"
        android:paddingLeft="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/speaker"
        android:layout_above="@+id/wuziqi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/wuziqi"
        android:layout_toRightOf="@id/btn_voice"

        android:text="声音"
        android:gravity="center"
        android:textSize="20dp"
        />


    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_restart"
        android:background="@drawable/restart"

        android:layout_marginStart="90dp"
        android:layout_above="@+id/wuziqi"
        android:layout_toEndOf="@+id/btn_voice" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/wuziqi"
        android:layout_toRightOf="@id/btn_restart"

        android:text="重玩"
        android:gravity="center"
        android:textSize="20dp"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/cancel"
        android:id="@+id/btn_exit"

        android:layout_toRightOf="@id/btn_restart"
        android:layout_marginStart="90dp"
        android:layout_above="@+id/wuziqi"
        android:layout_alignTop="@+id/btn_restart" />





    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/wuziqi"
        android:layout_toRightOf="@id/btn_exit"
        android:text="退出"
        android:gravity="center"
        android:textSize="20dp"
        />

</RelativeLayout>
